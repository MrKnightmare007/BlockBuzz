  "include": ["**/*.ts", "**/*.tsx", "schemas/schema.js", "schemaTypes/tweetSchema.jsschemaTypes/userSchema.jsa.js", "schemaTypes/index.ts", "sanity.config.js"],
  "exclude": ["node_modules"]
}
